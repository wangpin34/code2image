{
  "name": "Code Glam",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Produce pretty snippet image of your code",
  "author": "penn wang <guyusay@gmail.com>",
  "icons": {
    "16": "Icon-16.png",
    "32": "Icon-32.png",
    "48": "Icon-48.png",
    "128": "Icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "Icon-16.png",
      "32": "Icon-32.png",
      "48": "Icon-48.png",
      "128": "Icon-128.png"
    },
    "default_title": "Code Glam"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": ["style.css"],
      "js": ["content-script.js"]
    }
  ],
    "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["*://*/*"]
    }
  ],
  "permissions": ["activeTab", "background"],
  "content_security_policy": {
    "script-src": "localhost",
    "object-src": "none"
  }
}